@model Dimsum.Shaomai.DomainEntity.Solution
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style
{

}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-application"></i>
        </span>
        解决方案详情
    </h3>
</div>

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">环境变量列表</h4>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>环境变量名</th>
                        <th>项目数量</th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SolutionEnvs)
                        {
                            <tr data-env="@item.Id" class="tr-env">
                                <td>@item.EnvName</td>
                                <td>@Model.SolutionProjects.Count(x=>x.SolutionEnvId==item.Id)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">项目列表</h4>

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(function() {

        })
    </script>
}
